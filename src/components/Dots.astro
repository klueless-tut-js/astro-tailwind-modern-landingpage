---
import dotsImage from '../assets/dots.svg';

export interface Props {
  variant: string
}

const { variant } = Astro.props as Props;

const baseClass = `
  hidden
  lg:block
  absolute
  top-1/2
  -translate-y-1/2
`;

const variants: {[key: string]: string} = {
  left: '-left-24 xl:-left-7',
  right: '-right-20 xl:-right-7'
};

const imageClass = `${baseClass} ${variants[variant]}`;

---
<img src={dotsImage} alt="dots" aria-hidden="true" class={imageClass}>
